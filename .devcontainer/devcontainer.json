{
  // Название конфигурации
  "name": "Java GraalVM Development",

  // Используемый докер образ
  "image": "gradle:8.5.0-jdk21-graal",

  // Не обязательно: дополнительные файлы монтируются в контейнер
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  // Монтируем Docker внутрь Dev container
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  // Определяет переменные среды
  "env": {
    // Устанавливает переменную JAVA_HOME внутри контейнера
    "JAVA_HOME": "/usr/lib/jvm/graalvm-ce-java11",
    // Другие переменные среды, если нужно
  },

  // Настройки Docker
  "dockerRunArgs": [
    "--add-host=host.docker.internal:host-gateway",
  ],

  // Установка команд, которые выполняются после создания контейнера
  "postCreateCommand": "apt update && apt install apt-transport-https ca-certificates curl software-properties-common -y && curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add - && add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu focal stable\" -y && apt-cache policy docker-ce && apt install docker-ce -y && curl -L \"https://github.com/docker/compose/releases/download/1.29.2/docker-compose-$(uname -s)-$(uname -m)\" -o /usr/local/bin/docker-compose && chmod +x /usr/local/bin/docker-compose && echo Container was created successfully.",

  // Установка команд, которые выполняются после подключения к контейнеру
  "postAttachCommand": "echo Connected to the container."
}
